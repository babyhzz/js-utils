{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "es5",                                
    "module": "es6",
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,  
    "strict": true,                                 
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  }
}
